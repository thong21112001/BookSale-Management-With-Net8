@{
	var breadscrumModel = ViewData["Breadscrumb"] as BreadscrumModel;

	if (!string.IsNullOrEmpty(breadscrumModel.Path))
	{
		var segments = breadscrumModel.Path.Split("/");

		<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
			<div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
				<!--begin::Info-->
				<div class="d-flex align-items-center flex-wrap mr-2">
					<!--begin::Page Title-->
					<h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">@breadscrumModel.Title</h5>
					<!--end::Page Title-->
					<!--begin::Breadcrumb-->
					<ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
						@foreach (var item in segments)
						{
							if (!string.IsNullOrEmpty(item))
							{
								<li class="breadcrumb-item text-muted">
									@item
								</li>
							}
						}
					</ul>
				</div>
				<!--end::Info-->
			</div>
		</div>
	}
}

