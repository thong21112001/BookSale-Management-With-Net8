
@{
    ViewData["Title"] = "SaveData";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>SaveData</h1>

<form class="forms-sample" asp-area="admin" asp-controller="account" asp-action="savedata" method="post">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="Username">Role <span class="text-danger">*</span></label>
                <select class="form-control p-input">
                    <option>Please select</option>
                    <option>Super admin</option>
                    <option>Administrator</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Username">Username <span class="text-danger">*</span></label>
                <input type="text" class="form-control p-input" id="Username" placeholder="Enter username">
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label for="Password">Password <span class="text-danger">*</span></label>
                <input type="password" class="form-control p-input" id="Password" placeholder="Enter password">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Fullname">Fullname <span class="text-danger">*</span></label>
                <input type="text" class="form-control p-input" id="Fullname" placeholder="Enter fullname">
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label for="Email">Email <span class="text-danger">*</span></label>
                <input type="text" class="form-control p-input" id="Email" placeholder="Enter email">
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Phone">Phone</label>
                <input type="text" class="form-control p-input" id="Phone" placeholder="Enter phone">
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label for="MobilePhone">Mobile Phone</label>
                <input type="text" class="form-control p-input" id="MobilePhone" placeholder="Enter mobile phone">
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control p-input" id="Address" placeholder="Enter address">
    </div>

    <div class="form-check col-12">
        <label class="form-check-label">
            <input type="checkbox" class="form-check-input">
            IsActive
        </label>
    </div>

    <div class="row">
        <img src="~/images/image.png" alt="No image" height="150" />
        <div class="col-lg-8">
            <input type="file" class="form-control-file" id="Images">
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Submit</button>
        @Html.ActionLink("Cancel", "Index", "Account", null, new { @class = "btn btn-secondary ml-1" })
    </div>
</form>