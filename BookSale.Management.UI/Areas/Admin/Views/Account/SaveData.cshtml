@model BookSale.Management.Application.DTOs.CreateAccountDTO

@{
    ViewData["Title"] = "SaveData";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>@(string.IsNullOrEmpty(ViewBag.IdUser?.ToString()) ? "Create" : "Update") Data</h1>

<form class="forms-sample" asp-area="admin" asp-controller="account" asp-action="savedata" 
        method="post" enctype="multipart/form-data" asp-antiforgery="true">
    @Html.Raw("<div asp-validation-summary='All' class='text-danger'></div>")
    <input asp-for="Id" hidden />

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="Username">Role <span class="text-danger">*</span></label>
                @Html.DropDownListFor(x => x.RoleName, (IEnumerable<SelectListItem>) ViewBag.Roles,
                                        "Please select", new { @class = "form-control" })
                <span class="text-danger" asp-validation-for="RoleName"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Username">Username <span class="text-danger">*</span></label>
                <input type="text" class="form-control p-input" id="Username" placeholder="Enter username" asp-for="Username">
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label for="Password">Password <span class="text-danger">*</span></label>
                <input type="password" class="form-control p-input" id="Password" placeholder="Enter password" asp-for="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Fullname">Fullname <span class="text-danger">*</span></label>
                <input type="text" class="form-control p-input" id="Fullname" placeholder="Enter fullname" asp-for="Fullname">
                <span class="text-danger" asp-validation-for="Fullname"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label for="Email">Email <span class="text-danger">*</span></label>
                <input type="text" class="form-control p-input" id="Email" placeholder="Enter email" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Phone">Phone <span class="text-danger">*</span></label>
                <input type="text" class="form-control p-input" id="Phone" placeholder="Enter phone" asp-for="Phone">
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label for="MobilePhone">Mobile Phone</label>
                <input type="text" class="form-control p-input" id="MobilePhone" placeholder="Enter mobile phone" asp-for="MobilePhone">
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control p-input" id="Address" placeholder="Enter address" asp-for="Address">
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>

    <div class="form-check col-12">
        <label class="form-check-label">
            <input type="checkbox" class="form-check-input" asp-for="IsActive">
            IsActive
        </label>
    </div>

    <div class="row">
        <img src="~/images/image.png" alt="No image" height="150" />
        <div class="col-lg-8">
            <input type="file" class="form-control-file" id="Images" asp-for="Avatar">
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Submit</button>
        @Html.ActionLink("Cancel", "Index", "Account", null, new { @class = "btn btn-secondary ml-1" })
    </div>
</form>