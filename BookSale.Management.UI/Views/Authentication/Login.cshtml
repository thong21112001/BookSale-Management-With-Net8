@model BookSale.Management.UI.Models.UserLoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
	<h1 class="text-center display-6 text-uppercase">Login</h1>
    <p class="text-center mb-0 fw-bold text-white">Enter your details to login to your account</p>
</div>
<!-- Single Page Header End -->


<!--begin::Login Sign in form-->
<div class="container-fluid py-5">
    <div class="container py-5 d-flex justify-content-center">
        <span class="text-danger">@Html.Raw(TempData["Errors"])</span>

        <form class="form" method="post" asp-controller="Authentication" asp-action="Login" asp-antiforgery="true">
            <input type="hidden" value="@ViewBag.ReturnUrl" asp-for="ReturnUrl">
            <input type="hidden" asp-for="CaptchaToken">


            <div class="form-item w-100 my-3">
                <input type="text" class="form-control text-dark bg-white-o-5 fw-bold" placeholder="Username" asp-for="Username">
            </div>
            <span class="text-danger" asp-validation-for="Username"></span>

            <div class="form-item w-100 my-3">
                <input type="password" class="form-control text-dark bg-white-o-5 fw-bold" placeholder="Password" asp-for="Password">
            </div>
            <span class="text-danger" asp-validation-for="Password"></span>

            <div class="form-check text-start my-3">
                <input type="checkbox" class="form-check-input set-bg-checkbox border-0" id="HasRememberMe" asp-for="HasRememberMe">
                <label class="form-check-label" for="HasRememberMe">Remember me</label>
            </div>

            <div id="recaptcha"></div>

            <div class="text-center align-items-center justify-content-center pt-4">
                <button type="submit" class="btn set-btn-format px-4 text-uppercase text-white">Login</button>

                <a asp-controller="Authentication" asp-action="Register" class="btn set-btn-format px-4 text-uppercase text-white">Register</a>
            </div>

            <hr />

            <div class="text-center align-items-center justify-content-center">
                <a href="/authentication/external?provider=Google" class="login-with-google-btn">
                    Sign in with Google
                </a>

                <a href="/authentication/external?provider=Facebook" class="login-with-facebook-btn">
                    Sign in with Facebook
                </a>
            </div>
        </form>
    </div>
</div>
<!--end::Login Sign in form-->


@section Scripts{
    @* Thêm đoạn captcha vào *@
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer></script>
	@{
		<partial name="_ValidationScriptsPartial" />
	}
    @* Thêm đoạn captcha vào *@
    <script>
        var onloadCallback = function () {
            grecaptcha.render('recaptcha', {
                'sitekey': '6LeiPv0pAAAAACCkHz4R5YXrZCCGKwzBE6DvBSyx',
                'callback': function (response) {
                    $('#CaptchaToken').val(response);
                }
            });
        };
    </script>
}

