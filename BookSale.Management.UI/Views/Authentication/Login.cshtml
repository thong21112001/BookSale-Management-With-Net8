@model BookSale.Management.UI.Models.UserLoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
	<h1 class="text-center text-white display-6 text-uppercase">Login</h1>
	<p class="text-center mb-0 fw-bold">Enter your details to login to your account</p>
</div>
<!-- Single Page Header End -->


<!--begin::Login Sign in form-->
<div class="container-fluid py-5">
    <div class="container py-5 d-flex justify-content-center">
        <span class="text-danger">@Html.Raw(TempData["Errors"])</span>

        <form class="form" method="post" asp-controller="Authentication" asp-action="Login" asp-antiforgery="true">
            <div class="form-item w-100 my-3">
                <input type="text" class="form-control text-dark bg-white-o-5 fw-bold" placeholder="Username" asp-for="Username">
            </div>
            <span class="text-danger" asp-validation-for="Username"></span>

            <div class="form-item w-100 my-3">
                <input type="password" class="form-control text-dark bg-white-o-5 fw-bold" placeholder="Password" asp-for="Password">
            </div>
            <span class="text-danger" asp-validation-for="Password"></span>

            <div class="form-check text-start my-3">
                <input type="checkbox" class="form-check-input bg-primary border-0" id="HasRememberMe" asp-for="HasRememberMe">
                <label class="form-check-label" for="HasRememberMe">Remember me</label>
            </div>

            <div class="text-center align-items-center justify-content-center pt-4">
                <button type="button" class="btn border-secondary px-4 text-uppercase text-primary">Login</button>
            </div>
        </form>
    </div>
</div>
<!--end::Login Sign in form-->


@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

