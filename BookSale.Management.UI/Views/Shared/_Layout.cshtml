@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Book Store</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/User/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/User/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/User/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/User/css/style.css" rel="stylesheet">

    <!--Begin::Toaster-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <!--End::Toaster-->

    @* Thêm đoạn captcha vào *@
    <!--Begin::Captcha-->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <!--End::Captcha-->

    @await RenderSectionAsync("Stylesheet", required: false)
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
    <!-- Navbar start -->
    <div class="container-fluid fixed-top">
        <div class="container topbar d-none d-lg-block">
            <div class="d-flex justify-content-between">
                <div class="top-info ps-2">
                    <small class="me-3"><i class="fas fa-map-marker-alt me-2"></i> <a href="#" class="text-white">Hải Châu, Đà Nẵng</a></small>
                    <small class="me-3"><i class="fas fa-envelope me-2"></i><a href="#" class="text-white">quangthong211101@gmail.com</a></small>
                </div>
            </div>
        </div>
        <div class="container px-0">
            <nav class="navbar navbar-light bg-white navbar-expand-xl">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand"><h1 class="set-color-h1 display-6">BOOK STORE</h1></a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">
                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link active text-uppercase fw-bold">Home</a>
                        <a asp-controller="Shop" asp-action="Index" class="nav-item nav-link text-uppercase fw-bold">Shop</a>
                    </div>
                    <div class="d-flex m-3 me-0 navbar-right-icon">
                        <button class="btn-search btn border set-btn-outline-primary btn-md-square rounded-circle me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search"></i></button>
                        <a asp-controller="Cart" asp-action="Index" class="position-relative me-4 my-auto">
                            <i class="fa fa-shopping-bag fa-2x"></i>
                            <span class="set-cart-bg-text cart-number position-absolute rounded-circle d-flex align-items-center justify-content-center text-white px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">0</span>
                        </a>

                        <!--Hover profile -->
                        @{
                            //Nếu User.Identity? = null thì IsAuthenticated mặc định là false (Người dùng chưa xác thực)
                            var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
                        }
                        <div class="nav-item dropdown">
                            <a href="#" class="my-auto nav-link" data-bs-toggle="dropdown">
                                <i class="fas fa-user fa-2x"></i>
                            </a>
                            @if (@isAuthenticated)//Da dang nhap
                            {
                                <div class="dropdown-menu m-0 bg-secondary rounded-0">
                                    <p class="text-dark fs-5 fw-bold text-center text-uppercase">Information</p>
                                    <div class="dropdown-divider"></div>
                                    <p class="text-center fw-bold">@User.Identity?.Name</p>
                                    <div class="dropdown-divider"></div>
                                    <a asp-controller="Profile" asp-action="Index" class="dropdown-item fw-bold">Profile</a>
                                    <a asp-controller="Authentication" asp-action="Logout" class="dropdown-item fw-bold">Logout</a>
                                </div>
                            }
                            else
                            {
                                <div class="dropdown-menu m-0 bg-secondary rounded-0">
                                    <a asp-controller="authentication" asp-action="login" class="dropdown-item fw-bold">SignIn</a>
                                    <a asp-controller="authentication" asp-action="Register" class="dropdown-item fw-bold">SignUp</a>
                                </div>
                            }

                            
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Navbar End -->
    <!-- Modal Search Start -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex align-items-center">
                    <div class="input-group w-75 mx-auto d-flex">
                        <input type="search" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1">
                        <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Search End -->

    @RenderBody()

    <!-- Footer Start -->
    <div class="container-fluid text-white-50 footer pt-5 mt-5">
        <div class="container py-5">
            <div class="pb-4 mb-4" style="border-bottom: 1px solid #00b8c2;">
                <div class="row g-4">
                    <div class="col-lg-3">
                        <a href="#">
                            <h1 class="set-color-h1 mb-0">BOOK STORE</h1>
                        </a>
                    </div>
                    <div class="col-lg-6">
                        <div class="position-relative mx-auto">
                            <input class="form-control border-0 w-100 py-3 px-4 rounded-pill" type="number" placeholder="Your Email">
                            <button type="submit" class="btn btn-subscribe border-0 border-secondary py-3 px-4 position-absolute rounded-pill text-white" style="top: 0; right: 0;">Subscribe Now</button>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="d-flex justify-content-end pt-3">
                            <a class="btn set-btn-outline-primary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn set-btn-outline-primary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn set-btn-outline-primary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-youtube"></i></a>
                            <a class="btn set-btn-outline-primary btn-md-square rounded-circle" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-5">
                <div class="col-lg-4 col-md-4">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Shop Info</h4>
                        <a class="btn-link" href="">About Us</a>
                        <a class="btn-link" href="">Contact Us</a>
                        <a class="btn-link" href="">Privacy Policy</a>
                        <a class="btn-link" href="">Terms & Condition</a>
                        <a class="btn-link" href="">Return Policy</a>
                        <a class="btn-link" href="">FAQs & Help</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Account</h4>
                        <a class="btn-link" href="">My Account</a>
                        <a class="btn-link" href="">Shop</a>
                        <a class="btn-link" href="">Shopping Cart</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Contact</h4>
                        <p>Address: Hải Châu, Đà Nẵng</p>
                        <p>Email: quangthong211101@gmail.com</p>
                        <p>Phone: 0367262415</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Copyright Start -->
    <div class="container-fluid copyright py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <span class="text-light"><a class="a-footer" href="#"><i class="fas fa-copyright text-light me-2"></i>BookStore</a>, 04/2024.</span>
                </div>
                <div class="col-md-6 my-auto text-center text-md-end text-white">
                    <!--/*** This template is free as long as you keep the below author’s credit link/attribution link/backlink. ***/-->
                    <!--/*** If you'd like to use the template without the below author’s credit link/attribution link/backlink, ***/-->
                    <!--/*** you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". ***/-->
                    Designed By <a class="a-footer border-bottom" href="https://htmlcodex.com">HTML Codex</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Copyright End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-top border-3 rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/User/lib/easing/easing.min.js"></script>
    <script src="~/User/lib/waypoints/waypoints.min.js"></script>
    <script src="~/User/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/User/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Add Toast -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/admin/settingsjs/toast_allpage.js"></script>
    <!-- Template Javascript -->
    <script src="~/User/js/main.js"></script>
    <!-- Add cart -->
    <script src="~/user/config_application/cart/buttonaddtocart.js"></script>
    <!-- Cập nhập số lượng item trong cart qua các trang -->
    <script>
        $(document).ready(function () {
            updateCartCount();
        });
    </script>
    <!-- Add Js -->
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>